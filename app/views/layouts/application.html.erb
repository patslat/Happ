<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Happ" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Happ" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
  <div id="happ-nav" class="navbar navbar-static-top">
    <div class="container">
      <% if current_user %>
        <button type="button" class="navbar-toggle" data-toggle="collapse"
          data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
     <% end %>
        <div class="navbar-brand">
          <a class="happ-brand" href="/#">
            <strong>Happ</strong>
          </a>
        </div>
        <div class="nav-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li id="days-index"><a href="#/days">Entries</a></li>
              <li id="days-summary"><a href="#/summary">Summary</a></li>
              <li id="sign-out">
                <%= link_to "Sign Out",
                  destroy_user_session_url,
                  :method => :delete %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
